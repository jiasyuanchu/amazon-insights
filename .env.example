# Amazon Insights Environment Configuration

# API Keys (Required)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  # Optional: for AI-powered analysis

# Database Configuration
DATABASE_URL=postgresql://amazon_insights:secure_password_change_me@localhost:5432/amazon_insights
DATABASE_URL_REPLICA=postgresql://amazon_insights:secure_password_change_me@localhost:5433/amazon_insights
POSTGRES_PASSWORD=secure_password_change_me
SQLITE_FALLBACK=true  # Use SQLite if PostgreSQL unavailable (dev only)

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no password

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=86400   # 24 hours
CACHE_LONG_TTL=172800     # 48 hours  
CACHE_SHORT_TTL=3600      # 1 hour

# Authentication & Security
API_KEY_REQUIRED=false    # Set to true in production
JWT_SECRET_KEY=your-secret-key-change-in-production
TOKEN_EXPIRE_HOURS=24

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development   # development, staging, production
MONITORING_INTERVAL=24    # hours

# Alert Thresholds
ALERT_THRESHOLD_PRICE_CHANGE=0.1   # 10%
ALERT_THRESHOLD_BSR_CHANGE=0.2     # 20%

# Worker Configuration
WORKER_CONCURRENCY=4
CELERY_WORKER_PREFETCH=1

# Monitoring (Optional)
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=30d

# Production Settings (Override in production)
# DATABASE_URL=postgresql://user:pass@prod-db-host:5432/amazon_insights
# REDIS_URL=redis://prod-redis-host:6379/0
# API_KEY_REQUIRED=true
# LOG_LEVEL=WARNING
# ENVIRONMENT=production